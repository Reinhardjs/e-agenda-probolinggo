<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_previous_month"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:background="@color/shimmer_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_background"
            android:fontFamily="sans-serif-medium"
            android:text="April 2018"
            android:textColor="@color/shimmer_background"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_next_month"
            app:layout_constraintStart_toEndOf="@id/img_previous_month"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_next_month"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/shimmer_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/shimmer_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/shimmer_background"
        app:layout_constraintDimensionRatio="5:4"
        app:layout_constraintTop_toBottomOf="@id/shimmer_calendar_header" />

    <View
        android:id="@+id/shimmer_calendar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_background"
        app:layout_constraintTop_toBottomOf="@id/shimmer_calendar_view" />

    <include
        layout="@layout/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_calendar_line" />

</androidx.constraintlayout.widget.ConstraintLayout>